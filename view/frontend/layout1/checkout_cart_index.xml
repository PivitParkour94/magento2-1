<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css  src="css/zipmoney.css" />
    </head>    
    <body>
        
        <referenceBlock name="head.components">
            <block class="\ZipMoney\ZipMoneyPayment\Block\InitLibrary" name="zipmoney.rootel" />                
        </referenceBlock>
        
        <referenceContainer name="page.top">
            <block class="ZipMoney\ZipMoneyPayment\Block\Widget\Banner" name="zipmoney.productbanner" template="widgets/product/banner.phtml">
                <arguments>
                    <argument name="page_type" xsi:type="string">cart</argument>
                </arguments>
            </block>
        </referenceContainer>   


        <referenceContainer name="checkout.cart.totals.container">
            <block class="ZipMoney\ZipMoneyPayment\Block\Widget\Tagline"  name="product.info.addtocart.additional.zipmoney.carttagline" template="widgets/product/tagline.phtml">
                <arguments>
                    <argument name="page_type" xsi:type="string">cart</argument>
                </arguments>
            </block>
        </referenceContainer>


        <referenceContainer name="checkout.cart.methods">
            <block class="ZipMoney\ZipMoneyPayment\Block\Widget\Image" name="product.info.addtocart.additional.zipmoney.productimage" template="widgets/product/image.phtml">
                <arguments>
                    <argument name="page_type" xsi:type="string">cart</argument>
                </arguments>
            </block>

         
        </referenceContainer>
    </body>
</page>
